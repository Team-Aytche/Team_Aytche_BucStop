<h1>Submit your game</h1>
<form>
    <label>your Name</label>
    <input type="text" id="name" name="name">
    <br><br>
    <label>your ETSU Email</label>
    <input type="text" id="etsu_email" name="etsu_email">
    <br><br>
    <label>Game Title</label>
    <input type="text" id="game_title" name="game_title">
    <br><br>
    <label>Game Description</label>
    <input type="text" id="game_desc" name="game_desc">>
    <br><br>
    <!-- <label> Brief "How to Play" For The Game</label>
    <input type="text" id="how_to_play" name="how_to_play" style="width: 90px; height: 390px"> -->
    <div>
        <label for="HowToPlay">How to Play (Max 500 Characters):</label><br />
        <textarea id="HowToPlay" name="HowToPlay" maxlength="500"></textarea>
    </div>
    <br><br>
    <label>Please enter a valid GitHub link (e.g., https://github.com/yourusername/yourrepo)</label>
    <input type="url" id="GitHubLink" name="GitHubLink" pattern="https://github\.com/.*" title="Please enter a valid GitHub link (e.g., https://github.com/yourusername/yourrepo)">
    <br><br>
    <button style="background: #FFC72C; border-radius:4px">Submit</button>
</form>

<div id="successMessage" style="display: none; color: green;">
    Submission Successful!
</div>

<script>
    function showSuccess() {
        // Basic client-side validation
        const howToPlay = document.getElementById('HowToPlay').value;
        const gitHubLink = document.getElementById('GitHubLink').value;

        if (!howToPlay || !gitHubLink) {
            alert("Please fill in all fields.");
            return;
        }

        // GitHub link validation
        const githubRegex = /^https:\/\/github\.com\/[a-zA-Z0-9_-]+\/[a-zA-Z0-9_-]+(\/.*)?$/;
        if (!githubRegex.test(gitHubLink)) {
            alert("Please enter a valid GitHub link.");
            return;
        }

        document.getElementById('successMessage').style.display = "block";
    }
</script>